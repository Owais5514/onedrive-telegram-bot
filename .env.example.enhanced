# =============================================================================
# OneDrive Telegram Bot - Environment Configuration
# Copy this file to .env and fill in your actual values
# =============================================================================

# ===== REQUIRED FOR ALL METHODS =====
# Telegram Bot Token (get from @BotFather)
TELEGRAM_BOT_TOKEN=your_bot_token_here

# Admin User ID (your Telegram user ID)
ADMIN_USER_ID=your_user_id_here

# Microsoft Application Credentials
MICROSOFT_CLIENT_ID=your_client_id_here
MICROSOFT_CLIENT_SECRET=your_client_secret_here
MICROSOFT_TENANT_ID=your_tenant_id_here

# ===== WEBHOOK-SPECIFIC CONFIGURATION =====
# Only needed if using webhook method

# Your public webhook URL (MUST be HTTPS)
# Example: https://yourdomain.com or https://your-ngrok-url.ngrok.io
WEBHOOK_URL=https://yourdomain.com

# Webhook path (will be appended to WEBHOOK_URL)
# Default: /webhook
# Full webhook URL will be: WEBHOOK_URL + WEBHOOK_PATH
WEBHOOK_PATH=/webhook

# Port for webhook server to listen on
# Default: 8443 (Telegram supports: 443, 80, 88, 8443)
WEBHOOK_PORT=8443

# Host to bind webhook server to
# Default: 0.0.0.0 (listen on all interfaces)
# Use 127.0.0.1 for localhost only
WEBHOOK_HOST=0.0.0.0

# SSL Certificate files (optional, only if using self-signed certificates)
# Leave empty if using a domain with valid SSL certificate
SSL_CERT_FILE=
SSL_KEY_FILE=

# ===== OPTIONAL SETTINGS =====

# Log level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# OneDrive API timeout (seconds)
API_TIMEOUT=30

# File cache duration (hours)
CACHE_DURATION=24
